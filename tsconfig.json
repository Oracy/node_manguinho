{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "baseUrl": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["src/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": ["node_modules"]
}